<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <com.candlelightstudio.letsbesmartkid.DisableScrollViewPager
        android:id="@+id/wizardFirstScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/atasKiri" >

    </com.candlelightstudio.letsbesmartkid.DisableScrollViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/background_pressed_prev"
            android:text="@string/kembali"
            android:textColor="#f39c12"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/background_pressed_next"
            android:text="@string/selanjutnya"
            android:textColor="#f39c12"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>