<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomActionBarTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:padding="10dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnTutupDialogBaca" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
            <ImageView
                android:id="@+id/imgBacaPerpustakaan2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/kategori_fauna" />

            <TextView
                android:id="@+id/lblPenjelasan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgBacaPerpustakaan2"
                android:text="TextView"
                android:textColor="#2c3e50" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnTutupDialogBaca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#95a5a6"
        android:text="tutup" />

</RelativeLayout>
