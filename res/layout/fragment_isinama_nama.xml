<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ecc71"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <EditText
        android:id="@+id/txtIsiNamaBlkg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtIsiNamaBlkg"
        android:layout_centerVertical="true"
        android:background="@drawable/background_isinama_nama"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nama_belakang"
        android:inputType="textPersonName"
        android:textColor="#2980b9"
        android:textColorHint="#5FAEE3" />

    <EditText
        android:id="@+id/txtIsiNamaDepan"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/txtIsiNamaBlkg"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_isinama_nama"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/nama_depan"
        android:inputType="textPersonName"
        android:textColor="#2980b9"
        android:textColorHint="#5FAEE3" >

        <requestFocus />
    </EditText>

</RelativeLayout>
